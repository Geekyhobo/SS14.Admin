@page "/EditPermissions/{UserId}"
@model SS14.Admin.Pages.Permissions.EditPermissionsModel

<h2>Edit Admin Permissions</h2>

<form method="post">
    <input type="hidden" asp-for="Admin.UserId" />

    <div class="form-group">
        <label asp-for="Admin.Title" class="control-label">Title</label>
        <input asp-for="Admin.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Admin.RankName" class="control-label">Rank Name</label>
        <input asp-for="Admin.RankName" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">Permissions</label>
        @foreach (var flag in Model.AvailableFlags)
        {
            <div class="form-check">
                <input asp-for="@flag.IsSelected" class="form-check-input" />
                <label class="form-check-label">@flag.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

