@using SS14.Admin.Services
@using SS14.Admin.Admins
@using System.Security.Claims
@implements IDisposable
@inject ClientPreferencesService ClientPreferences

@if (_hasPiiPermission)
{
<button @onclick="Toggle" id="pii-toggle" type="button" class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5" title="@(_isCensored ? "Show PII" : "Hide PII")">
    <svg id="pii-toggle-hidden-icon" class="@(_isCensored ? "block" : "hidden") w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd"></path>
        <path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z"></path>
    </svg>
    <svg id="pii-toggle-visible-icon" class="@(_isCensored ? "hidden" : "block") w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
    </svg>
</button>
}

@code
{
    [CascadingParameter]
    private Task<AuthenticationState>? AuthState { get; set; }

    private ClaimsPrincipal? User { get; set; }
    private bool _isCensored = true; // Start with PII censored by default
    private bool _hasPiiPermission;

    protected override async Task OnInitializedAsync()
    {
        // Get user from cascading auth state (same pattern as Home.razor.cs)
        User = (await AuthState!).User;

        // Check if user has PII permission using the role pattern from Home.razor
        _hasPiiPermission = User.IsInRole(nameof(AdminFlags.Pii).ToUpper());

        // Only subscribe to changes if user has permission
        if (_hasPiiPermission)
        {
            ClientPreferences.OnChange += OnPreferencesChanged;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && _hasPiiPermission)
        {
            var preferences = await ClientPreferences.GetClientPreferences();
            _isCensored = preferences.censorPii;
            StateHasChanged();
        }
    }

    private void OnPreferencesChanged(ClientPreferencesService.ClientPreferences preferences)
    {
        _isCensored = preferences.censorPii;
        StateHasChanged();
    }

    async Task Toggle()
    {
        await ClientPreferences.TogglePiiCensoring();
        _isCensored = !_isCensored;
        StateHasChanged();
    }

    public void Dispose()
    {
        if (_hasPiiPermission)
        {
            ClientPreferences.OnChange -= OnPreferencesChanged;
        }
    }
}
