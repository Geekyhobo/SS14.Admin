@if (Visible)
{
    <div class="@ContainerClass" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="@CardClass">
            <!-- Error Icon -->
            <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM10 5a1 1 0 011 1v4a1 1 0 11-2 0V6a1 1 0 011-1zm-1 8a1 1 0 102 0 1 1 0 00-2 0z" clip-rule="evenodd"></path>
                </svg>
            </div>

            <!-- Message Content -->
            <div class="flex-1 ml-3">
                <p class="text-sm font-medium text-white">
                    Your admin account is suspended.
                </p>
            </div>

            <!-- Close Button -->
            <button
                type="button"
                @onclick="Close"
                class="@CloseButtonClass"
                aria-label="Close notification">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
            </button>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public EventCallback<bool> VisibleChanged { get; set; }

    [Parameter]
    public int AutoHideMs { get; set; } = 10000;

    private Timer? _autoHideTimer;

    private string ContainerClass =>
        "w-full transition-all duration-500 ease-out mt-4 " +
        (Visible ? "translate-y-0 opacity-100" : "-translate-y-4 opacity-0 pointer-events-none");

    private string CardClass =>
        "flex items-start p-4 space-x-3 " +
        "bg-amber-600/90 dark:bg-amber-700/90 backdrop-blur-sm " +
        "rounded-lg shadow-lg " +
        "border-l-4 border-amber-800 dark:border-amber-900";

    private string CloseButtonClass =>
        "flex-shrink-0 ml-3 " +
        "text-white/80 hover:text-white " +
        "focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-amber-600 " +
        "rounded transition-colors";

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        if (Visible && AutoHideMs > 0)
        {
            _autoHideTimer?.Dispose();
            _autoHideTimer = new Timer(
                async _ => await InvokeAsync(async () => await Close()),
                null,
                AutoHideMs,
                Timeout.Infinite
            );
        }
    }

    private async Task Close()
    {
        _autoHideTimer?.Dispose();
        _autoHideTimer = null;

        Visible = false;
        await VisibleChanged.InvokeAsync(false);
        StateHasChanged();
    }
}
