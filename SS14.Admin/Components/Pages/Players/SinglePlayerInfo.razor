@page "/players/{userId:guid}"
@using Content.Shared.Database


<PageTitle>Player Info for @PlayerModel?.LastSeenUsername</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    @if (_isLoading)
    {
        <div class="flex items-center justify-center min-h-[400px]">
            <div class="text-center">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
                <p class="text-gray-600 dark:text-gray-400 text-lg">Loading player information...</p>
            </div>
        </div>
    }
    else if (PlayerModel == null)
    {
        <div class="bg-red-50 dark:bg-red-900/20 border-l-4 border-red-500 text-red-700 dark:text-red-300 p-4 rounded-lg shadow-md">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle text-xl mr-3"></i>
                <div>
                    <strong class="font-semibold">Player not found!</strong>
                    <p class="text-sm mt-1">The requested player does not exist.</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Player Header with Banned Banner -->
        <div class="mb-8">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
                        Player Information for <span class="text-blue-600 dark:text-blue-400">@PlayerModel.LastSeenUsername</span>
                    </h1>
                    <p class="text-gray-500 dark:text-gray-400 mt-1 text-sm">User ID: <code class="text-xs bg-gray-100 dark:bg-gray-800 px-2 py-0.5 rounded">@PlayerModel.Guid</code></p>
                </div>
                @if (HasActiveBan)
                {
                    <div class="flex items-center gap-2">
                        <div class="relative">
                            <div class="absolute inset-0 bg-red-500 dark:bg-red-600 rounded-lg blur opacity-75 animate-pulse"></div>
                            <span class="relative inline-flex items-center px-4 py-2 bg-red-600 dark:bg-red-700 text-white rounded-lg text-base font-bold shadow-lg">
                                <i class="fas fa-gavel mr-2"></i> BANNED
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Basic Player Information -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-6 overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 dark:from-blue-700 dark:to-blue-800 px-6 py-4">
                <h2 class="text-xl font-semibold text-white flex items-center">
                    <i class="fas fa-user mr-2"></i> Basic Information
                </h2>
            </div>
            <div class="p-6">
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col">
                        <dt class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Last seen username</dt>
                        <dd class="mt-1 text-lg font-medium text-gray-900 dark:text-gray-100">@PlayerModel.LastSeenUsername</dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Account created</dt>
                        <dd class="mt-1 text-gray-900 dark:text-gray-100">
                            @if (AccountCreationDate.HasValue)
                            {
                                <span>@AccountCreationDate.Value.ToString("yyyy-MM-dd HH:mm:ss") UTC</span>
                            }
                            else
                            {
                                <span class="text-gray-500 dark:text-gray-400 italic">Unknown</span>
                            }
                        </dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">First seen time</dt>
                        <dd class="mt-1 text-gray-900 dark:text-gray-100">@PlayerModel.FirstSeen.ToString("yyyy-MM-dd HH:mm:ss") UTC</dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Last seen time</dt>
                        <dd class="mt-1 text-gray-900 dark:text-gray-100">@PlayerModel.LastSeen.ToString("yyyy-MM-dd HH:mm:ss") UTC</dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Last seen address</dt>
                        <dd class="mt-1">
                            <button @onclick="() => NavigateToConnectionsByIp(PlayerModel.LastSeenIPAddress)"
                                    class="inline-flex items-center gap-1 text-blue-600 dark:text-blue-400 hover:underline cursor-pointer bg-transparent border-0 p-0 font-mono text-sm">
                                <i class="fas fa-search text-xs"></i>
                                @RedactIp(PlayerModel.LastSeenIPAddress)
                            </button>
                        </dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Last seen HWID</dt>
                        <dd class="mt-1">
                            <button @onclick="() => NavigateToConnectionsByHwid(PlayerModel.LastSeenHwid)"
                                    class="inline-flex items-center gap-1 text-blue-600 dark:text-blue-400 hover:underline cursor-pointer bg-transparent border-0 p-0 font-mono text-sm">
                                <i class="fas fa-search text-xs"></i>
                                @RedactHwid(PlayerModel.LastSeenHwid)
                            </button>
                        </dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Whitelisted</dt>
                        <dd class="mt-1 flex items-center gap-3">
                            @if (Whitelisted)
                            {
                                <span class="inline-flex items-center px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 rounded-full text-sm font-medium">
                                    <i class="fas fa-check-circle mr-1.5"></i> Yes
                                </span>
                                <button @onclick="ToggleWhitelistAsync" class="px-3 py-1.5 text-sm bg-red-600 hover:bg-red-700 text-white rounded-md transition-colors">
                                    Remove
                                </button>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-3 py-1 bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300 rounded-full text-sm font-medium">
                                    <i class="fas fa-times-circle mr-1.5"></i> No
                                </span>
                                <button @onclick="ToggleWhitelistAsync" class="px-3 py-1.5 text-sm bg-green-600 hover:bg-green-700 text-white rounded-md transition-colors">
                                    Add
                                </button>
                            }
                        </dd>
                    </div>
                </dl>
            </div>
        </div>

        <!-- Play Time Section -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-6 overflow-hidden">
            <div class="bg-gradient-to-r from-purple-600 to-purple-700 dark:from-purple-700 dark:to-purple-800 px-6 py-4">
                <h2 class="text-xl font-semibold text-white flex items-center">
                    <i class="fas fa-clock mr-2"></i> Play Time
                </h2>
            </div>
            <div class="p-6">
                @if (PlayTimes.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                            <thead class="bg-gray-50 dark:bg-gray-700/50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Timer</th>
                                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Time Played (h:mm)</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                @foreach (var tracker in PlayTimes)
                                {
                                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900 dark:text-gray-100">@tracker.Tracker</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@((int)tracker.TimeSpent.TotalHours):@tracker.TimeSpent.Minutes.ToString("D2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <i class="fas fa-clock text-gray-300 dark:text-gray-600 text-4xl mb-3"></i>
                        <p class="text-gray-500 dark:text-gray-400 italic">No play time data available.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Character Profiles Section -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-6 overflow-hidden">
            <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 dark:from-indigo-700 dark:to-indigo-800 px-6 py-4">
                <h2 class="text-xl font-semibold text-white flex items-center">
                    <i class="fas fa-id-card mr-2"></i> Character Profiles
                </h2>
            </div>
            <div class="p-6">
                @if (Profiles.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                            <thead class="bg-gray-50 dark:bg-gray-700/50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
                                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Age</th>
                                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Sex</th>
                                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Gender</th>
                                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Species</th>
                                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Favorite Job</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                @foreach (var profile in Profiles)
                                {
                                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900 dark:text-gray-100">@profile.CharacterName</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@profile.Age</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@profile.Sex</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@profile.Gender</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@profile.Species</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@profile.FavoriteJob</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <i class="fas fa-id-card text-gray-300 dark:text-gray-600 text-4xl mb-3"></i>
                        <p class="text-gray-500 dark:text-gray-400 italic">No character profiles found.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Notes Section -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-6 overflow-hidden">
            <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 dark:from-yellow-600 dark:to-yellow-700 px-6 py-4 flex items-center justify-between">
                <h2 class="text-xl font-semibold text-white flex items-center">
                    <i class="fas fa-sticky-note mr-2"></i> Notes
                </h2>
                <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm font-medium">Total: @Remarks.Count</span>
            </div>
            <div class="p-6">
                @if (Remarks.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                            <thead class="bg-gray-50 dark:bg-gray-700/50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Type</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Message</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Round</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Severity</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Visible/Seen</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Playtime</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Expires (UTC)</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Created (UTC)</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Edited (UTC)</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                @foreach (var remark in Remarks)
                                {
                                    <tr class="remark-@remark.Type.ToLower() hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors">
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            @switch (remark.Type)
                                            {
                                                case "Message":
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">
                                                        <i class="fas fa-envelope mr-1"></i> Message
                                                    </span>
                                                    break;
                                                case "Note":
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300">
                                                        <i class="fas fa-clipboard mr-1"></i> Note
                                                    </span>
                                                    break;
                                                case "Watchlist":
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300">
                                                        <i class="fas fa-eye mr-1"></i> Watchlist
                                                    </span>
                                                    break;
                                            }
                                        </td>
                                        <td class="px-4 py-4 text-gray-600 dark:text-gray-300 max-w-xs truncate" title="@remark.Message">@remark.Message</td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@remark.RoundId</td>
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            @if (remark.Severity.HasValue)
                                            {
                                                switch (remark.Severity.Value)
                                                {
                                                    case NoteSeverity.None:
                                                        <span class="text-gray-500 dark:text-gray-400"><i class="fas fa-check-circle mr-1"></i> None</span>
                                                        break;
                                                    case NoteSeverity.Minor:
                                                        <span class="text-blue-600 dark:text-blue-400"><i class="fas fa-minus-circle mr-1"></i> Minor</span>
                                                        break;
                                                    case NoteSeverity.Medium:
                                                        <span class="text-yellow-600 dark:text-yellow-400"><i class="fas fa-exclamation-circle mr-1"></i> Medium</span>
                                                        break;
                                                    case NoteSeverity.High:
                                                        <span class="text-red-600 dark:text-red-400 font-semibold"><i class="fas fa-exclamation-triangle mr-1"></i> High</span>
                                                        break;
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">N/A</span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            @if (remark.Type == "Message")
                                            {
                                                if (remark.Seen == true)
                                                {
                                                    <span class="text-green-600 dark:text-green-400"><i class="fas fa-eye mr-1"></i> Seen</span>
                                                }
                                                else
                                                {
                                                    <span class="text-gray-500 dark:text-gray-400"><i class="fas fa-eye-slash mr-1"></i> Not seen</span>
                                                }
                                            }
                                            else if (remark.Type == "Note")
                                            {
                                                if (remark.IsSecret == true)
                                                {
                                                    <span class="text-purple-600 dark:text-purple-400"><i class="fas fa-user-secret mr-1"></i> Secret</span>
                                                }
                                                else
                                                {
                                                    <span class="text-green-600 dark:text-green-400"><i class="fas fa-eye mr-1"></i> Visible</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">N/A</span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@((int)remark.PlaytimeAtNote.TotalHours):@remark.PlaytimeAtNote.Minutes.ToString("D2")</td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">
                                            @if (remark.ExpirationTime.HasValue)
                                            {
                                                var utc = remark.ExpirationTime.Value.ToUniversalTime();
                                                var diff = utc - DateTime.UtcNow;
                                                <div>
                                                    <span>@utc.ToString("yyyy-MM-dd HH:mm:ss")</span>
                                                    <p class="text-xs text-gray-500 dark:text-gray-400">in @diff.Days days @diff.Hours:@diff.Minutes.ToString("D2")</p>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300">Permanent</span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">
                                            <div>@remark.CreatedAt.ToUniversalTime().ToString("yyyy-MM-dd HH:mm:ss")</div>
                                            <div class="text-xs text-gray-500 dark:text-gray-400">by @remark.CreatedByUsername</div>
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">
                                            @if (remark.LastEditedAt.HasValue && remark.LastEditedAt > remark.CreatedAt)
                                            {
                                                <div>@remark.LastEditedAt.Value.ToUniversalTime().ToString("yyyy-MM-dd HH:mm:ss")</div>
                                                <div class="text-xs text-gray-500 dark:text-gray-400">by @remark.LastEditedByUsername</div>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">No</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <i class="fas fa-sticky-note text-gray-300 dark:text-gray-600 text-4xl mb-3"></i>
                        <p class="text-gray-500 dark:text-gray-400 italic">No notes found.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Bans Section -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-6 overflow-hidden">
            <div class="bg-gradient-to-r from-red-600 to-red-700 dark:from-red-700 dark:to-red-800 px-6 py-4 flex items-center justify-between">
                <h2 class="text-xl font-semibold text-white flex items-center">
                    <i class="fas fa-gavel mr-2"></i> Bans
                </h2>
                <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm font-medium">Total: @Bans.Count</span>
            </div>
            <div class="p-6">
                @if (Bans.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                            <thead class="bg-gray-50 dark:bg-gray-700/50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Reason</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Banned By</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Ban Time (UTC)</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Expires (UTC)</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Address</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">HWID</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Unban Info</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                @foreach (var ban in Bans)
                                {
                                    <tr class="@(ban.IsActive ? "bg-red-50/50 dark:bg-red-900/10" : "opacity-75") hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors">
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            @if (ban.IsActive)
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300">
                                                    <i class="fas fa-exclamation-circle mr-1"></i> Active
                                                </span>
                                            }
                                            else if (ban.UnbanTime.HasValue)
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">
                                                    <i class="fas fa-check-circle mr-1"></i> Unbanned
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300">
                                                    <i class="fas fa-clock mr-1"></i> Expired
                                                </span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 text-gray-600 dark:text-gray-300 max-w-xs truncate" title="@ban.Reason">@ban.Reason</td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@ban.AdminName</td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@ban.BanTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">
                                            @if (ban.ExpirationTime.HasValue)
                                            {
                                                var utc = ban.ExpirationTime.Value.ToUniversalTime();
                                                var diff = utc - DateTime.UtcNow;
                                                <div>
                                                    <span>@utc.ToString("yyyy-MM-dd HH:mm:ss")</span>
                                                    @if (ban.IsActive && diff.TotalMinutes > 0)
                                                    {
                                                        <p class="text-xs text-gray-500 dark:text-gray-400">in @diff.Days days @diff.Hours:@diff.Minutes.ToString("D2")</p>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300">Permanent</span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            @if (!string.IsNullOrEmpty(ban.Address))
                                            {
                                                <code class="text-sm bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">@RedactIp(ban.Address)</code>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">N/A</span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            @if (!string.IsNullOrEmpty(ban.Hwid))
                                            {
                                                <code class="text-sm bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">@RedactHwid(ban.Hwid)</code>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">N/A</span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">
                                            @if (ban.UnbanTime.HasValue)
                                            {
                                                <div>@ban.UnbanTime.Value.ToString("yyyy-MM-dd HH:mm:ss")</div>
                                                <div class="text-xs text-gray-500 dark:text-gray-400">by @(ban.UnbanAdminName ?? "System")</div>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">N/A</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <i class="fas fa-gavel text-gray-300 dark:text-gray-600 text-4xl mb-3"></i>
                        <p class="text-gray-500 dark:text-gray-400 italic">No bans found.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Role Bans Section -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-6 overflow-hidden">
            <div class="bg-gradient-to-r from-orange-600 to-orange-700 dark:from-orange-700 dark:to-orange-800 px-6 py-4 flex items-center justify-between">
                <h2 class="text-xl font-semibold text-white flex items-center">
                    <i class="fas fa-user-slash mr-2"></i> Role Bans
                </h2>
                <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm font-medium">Total: @RoleBans.Count</span>
            </div>
            <div class="p-6">
                @if (RoleBans.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                            <thead class="bg-gray-50 dark:bg-gray-700/50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Role</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Reason</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Banned By</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Ban Time (UTC)</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Expires (UTC)</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Address</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">HWID</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Unban Info</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                @foreach (var ban in RoleBans)
                                {
                                    <tr class="@(ban.IsActive ? "bg-red-50/50 dark:bg-red-900/10" : "opacity-75") hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors">
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            @if (ban.IsActive)
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300">
                                                    <i class="fas fa-exclamation-circle mr-1"></i> Active
                                                </span>
                                            }
                                            else if (ban.UnbanTime.HasValue)
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">
                                                    <i class="fas fa-check-circle mr-1"></i> Unbanned
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300">
                                                    <i class="fas fa-clock mr-1"></i> Expired
                                                </span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            <span class="inline-flex items-center px-2.5 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-md text-sm font-mono">@ban.Role</span>
                                        </td>
                                        <td class="px-4 py-4 text-gray-600 dark:text-gray-300 max-w-xs truncate" title="@ban.Reason">@ban.Reason</td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@ban.AdminName</td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">@ban.BanTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">
                                            @if (ban.ExpirationTime.HasValue)
                                            {
                                                var utc = ban.ExpirationTime.Value.ToUniversalTime();
                                                var diff = utc - DateTime.UtcNow;
                                                <div>
                                                    <span>@utc.ToString("yyyy-MM-dd HH:mm:ss")</span>
                                                    @if (ban.IsActive && diff.TotalMinutes > 0)
                                                    {
                                                        <p class="text-xs text-gray-500 dark:text-gray-400">in @diff.Days days @diff.Hours:@diff.Minutes.ToString("D2")</p>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300">Permanent</span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            @if (!string.IsNullOrEmpty(ban.Address))
                                            {
                                                <code class="text-sm bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">@RedactIp(ban.Address)</code>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">N/A</span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            @if (!string.IsNullOrEmpty(ban.Hwid))
                                            {
                                                <code class="text-sm bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">@RedactHwid(ban.Hwid)</code>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">N/A</span>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap text-gray-600 dark:text-gray-300">
                                            @if (ban.UnbanTime.HasValue)
                                            {
                                                <div>@ban.UnbanTime.Value.ToString("yyyy-MM-dd HH:mm:ss")</div>
                                                <div class="text-xs text-gray-500 dark:text-gray-400">by @(ban.UnbanAdminName ?? "System")</div>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">N/A</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <i class="fas fa-user-slash text-gray-300 dark:text-gray-600 text-4xl mb-3"></i>
                        <p class="text-gray-500 dark:text-gray-400 italic">No role bans found.</p>
                    </div>
                }
            </div>
        </div>
    }
</div>

<ConfirmDialog
    IsVisible="@_showWhitelistDialog"
    Title="@_whitelistDialogTitle"
