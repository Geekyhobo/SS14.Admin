<EditForm Model="@Filter" FormName="@FormName" OnSubmit="@Submit" class="flex gap-2 items-end flex-wrap mb-4">
    <div class="flex flex-col gap-1">
        <label for="filter-search">Search</label>
        <InputText @bind-Value="Filter.Search" id="filter-search" placeholder="Username, GUID, IP, HWID, Reason" class="w-80 px-2 py-1 border rounded" />
    </div>
    @*<div class="flex flex-col gap-1">
        <label for="filter-date-from">Ban Date From</label>
        <InputDate @bind-Value="Filter.DateFrom" id="filter-date-from" class="px-2 py-1 border rounded" />
    </div>
    <div class="flex flex-col gap-1">
        <label for="filter-date-to">Ban Date To</label>
        <InputDate @bind-Value="Filter.DateTo" id="filter-date-to" class="px-2 py-1 border rounded" />
    </div>
    <div class="flex flex-col gap-1">
        <label for="filter-expires-from">Expires From</label>
        <InputDate @bind-Value="Filter.ExpiresFrom" id="filter-expires-from" class="px-2 py-1 border rounded" />
    </div>
    <div class="flex flex-col gap-1">
        <label for="filter-expires-to">Expires To</label>
        <InputDate @bind-Value="Filter.ExpiresTo" id="filter-expires-to" class="px-2 py-1 border rounded" />
    </div>*@
    <div class="flex gap-4 items-center border rounded px-3 py-1">
        <span class="font-semibold">Status:</span>
        <label class="flex items-center gap-1">
            <InputCheckbox @bind-Value="Filter.ShowActive" id="show-active" />
            Active
        </label>
        <label class="flex items-center gap-1">
            <InputCheckbox @bind-Value="Filter.ShowExpired" id="show-expired" />
            Expired/Unbanned
        </label>
    </div>
    <button type="submit" class="h-9 px-6 py-1 bg-sky-400 hover:bg-sky-500 dark:bg-sky-600 dark:hover:bg-sky-700 rounded-md">Search</button>
</EditForm>

@code
{
    [Parameter] public BansFilterModel Filter { get; set; } = null!;
    [Parameter] public string FormName { get; set; } = null!;
    [Parameter] public EventCallback<EditContext> OnSubmit { get; set; } = EventCallback<EditContext>.Empty;

    private async Task Submit(EditContext arg) => await OnSubmit.InvokeAsync(arg);
}
